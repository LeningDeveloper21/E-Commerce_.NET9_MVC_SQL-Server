@model List<CategoryVM>

<div class="row justify-content-between mt-4">
    <div class="col-4">
        <h4>Categories</h4>
    </div>
    <div class="col-4 text-end">
        <a href="/Category/AddEdit" class="btn btn-outline-primary"> <i class="fa-solid fa-plus"> </i>Create New</a>
    </div>
</div>
<hr/>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th style="width: 120px">Actions</th>
        </tr>
     </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td style="width: 120px">
                    <a href="/Category/AddEdit/@category.CategoryId" class="btn btn-sm btn-outline-secondary"><i class="fa-solid fa-pen"></i></a>
                    <button onclick="deleteItem(@category.CategoryId)" class="btn btn-sm btn-outline-danger"><i class="fa-solid fa-trash"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
<script>
    function deleteItem(categoryId){
         Swal.fire({
          title: "Are you sure?",
          text: "You won't be able to revert this!",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "Yes, delete it!"
        }).then((result) => {
          if (result.isConfirmed) {
                // Call the delete API endpoint
                fetch(`/Category/Delete/${categoryId}`, {
                    method: 'POST'
                })
                .then(response => {
                    if(response.ok){
                        // Reload the page after successful deletion
                        location.reload();
                    } else {
                        alert("Failed to delete the category.");
                    }
                });
          }
        });
      
    }
</script>
}
