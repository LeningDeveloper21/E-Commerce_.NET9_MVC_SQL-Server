@model List<CategoryVM>

<div class="row justify-content-between mt-4">
    <div class="col-4">
        <h4>Categories</h4>
    </div>
    <div class="col-4 text-end">
        <a href="#" class="btn btn-outline-primary"> <i class="fa-solid fa-plus"> </i>Create New</a>
    </div>
</div>
<hr/>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th style="width: 120px">Actions</th>
        </tr>
     </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td style="width: 120px">
                    <a href="#" class="btn btn-sm btn-outline-secondary"><i class="fa-solid fa-pen"></i></a>
                    <a href="#" class="btn btn-sm btn-outline-danger"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>
